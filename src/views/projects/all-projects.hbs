<div class="row">
    {{#each projects}}
    <div class="col-md-3 ">
        <div class="card my-3 project-card">
            <div class="card-header">
                <h5 class="card-title d-flex justify-content-between align-items-center pt-2">
                    {{ this.name }} <a href="/projects/edit/{{this._id}}"><i class="fas fa-edit"></i></a>
                </h5>
            </div>
            <div class="card-body">
                
                <div class="d-flex">
                    <span class="badge bg-light text-dark space-right">{{this.code}}</span>
                    <span class="badge bg-warning text-dark">{{this.area}}</span>
                </div>
                
                <p class="my-3">
                    {{ this.description }}
                </p>
                <form action="/projects/delete/{{this._id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
        <div class="card mx-auto my-3">
            <div class="card-body">
                <p class="lead">¡No hay proyectos aún!</p>
                <a href="/projects/add" class="btn btn-success btn-block">Crea uno</a>
            </div>
        </div>

    {{/each}}
</div>
<div class="row d-flex justify-content-center">
    <div class="col-md-2 d-flex justify-content-center">
        <form action="/projects/add" method="GET">
            <button class="btn btn-success btn-block" type="submit">
                Agregar Proyecto
            </button>
        </form>
    </div>
</div>
<div class="row d-flex justify-content-center mt-2">
    <div class="col-md-2 d-flex justify-content-center">
        <form action="/" >
            <button class="btn btn-outline-secondary btn-block" type="submit">
                Regresar
            </button>
        </form>
    </div>
</div>
