{{#each product}}
{{#if name}}
<div class="col-md-4 mx-auto">
    <div class="card mt-3">
        <div class="card-header">
            <h3>Editar tipo de producto</h3>
        </div>
        <div class="card-body">
            <form action="/products/edit/{{_id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="{{name}}" value="{{name}}">
                </div>
                <div class="form-group my-3">
                    <input name="consecutive" class="form-control" placeholder="{{consecutive}}" value="{{consecutive}}"></input>
                </div> 
                <div class="form-group">
                    <button class="btn btn-outline-secondary btn-block">Regresar</button>
                    <button class="btn btn-primary btn-block" type="submit">Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{/if}}
{{/each}}