<div class="row">
    {{#each products}}
    <div class="col-md-3 ">
        <div class="card my-3 project-card">
            <div class="card-header">
                <h5 class="card-title d-flex justify-content-between align-items-center pt-2">
                    {{ this.name }} <a href="/products/edit/{{this._id}}"><i class="fas fa-edit"></i></a>
                </h5>
            </div>
            <div class="card-body">
                
                <div class="d-flex mb-2">
                    Consecutivo:  {{this.consecutive}} 
                </div>
                <form action="/products/delete/{{this._id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
        <div class="card mx-auto my-3">
            <div class="card-body">
                <p class="lead">¡No hay productos aún!</p>
                <a href="/products/add" class="btn btn-success btn-block">Crea uno</a>
            </div>
        </div>

    {{/each}}
</div>
<div class="row d-flex justify-content-center">
    <div class="col-md-2 d-flex justify-content-center">
        <form action="/products/add" method="POST">
            <button class="btn btn-success btn-block" type="submit">
                Agregar Produto
            </button>
        </form>
    </div>
</div>
<div class="row d-flex justify-content-center mt-2">
    <div class="col-md-2 d-flex justify-content-center">
        <form action="/" >
            <button class="btn btn-outline-secondary btn-block" type="submit">
                Regresar
            </button>
        </form>
    </div>
</div>
