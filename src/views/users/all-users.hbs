<div class="row">
    {{#each users}}

    <div class="col-md-3">
        <div class="card my-3">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{ this.name }} <a href="/users/edit/{{this._id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>
                    {{ this.rol }}
                </p>
                <form action="/users/delete/{{this._id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
        <div class="card mx-auto my-3">
            <div class="card-body">
                <p class="lead">¡No hay usuarios aún!</p>
                <a href="/users/signup" class="btn btn-success btn-block">Registra uno</a>
            </div>
        </div>

    {{/each}}
</div>
<div class="row d-flex justify-content-center">
    <div class="col-md-2 d-flex justify-content-center">
        <form action="/users/signup">
            <button class="btn btn-success btn-block" type="submit">
                Registrar Usuario
            </button>
        </form>
    </div>
</div>
<div class="row d-flex justify-content-center mt-2">
    <div class="col-md-2 d-flex justify-content-center">
        <form action="/" >
            <button class="btn btn-outline-secondary btn-block" type="submit">
                Regresar
            </button>
        </form>
    </div>
</div>
